<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="guidex.system.mapper.video.UserVideoMapper">
    
    <resultMap type="UserVideo" id="UserVideoResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="fileName"    column="file_name"    />
        <result property="videoUrl"    column="video_url"    />
        <result property="coverUrl"    column="cover_url"    />
        <result property="status"    column="status"    />
        <result property="uploadTime"    column="upload_time"    />
        <result property="duration"    column="duration"    />
        <result property="analyzeTime"    column="analyze_time"    />
    </resultMap>

    <sql id="selectUserVideoVo">
        select id, user_id, file_name, video_url, cover_url, status, upload_time, duration, analyze_time from user_video
    </sql>

    <select id="selectUserVideoList" parameterType="UserVideo" resultMap="UserVideoResult">
        <include refid="selectUserVideoVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="fileName != null  and fileName != ''"> and file_name like concat('%', #{fileName}, '%')</if>
            <if test="videoUrl != null  and videoUrl != ''"> and video_url = #{videoUrl}</if>
            <if test="coverUrl != null  and coverUrl != ''"> and cover_url = #{coverUrl}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="uploadTime != null "> and upload_time = #{uploadTime}</if>
            <if test="duration != null "> and duration = #{duration}</if>
            <if test="analyzeTime != null "> and analyze_time = #{analyzeTime}</if>
        </where>
    </select>
    
    <select id="selectUserVideoById" parameterType="Long" resultMap="UserVideoResult">
        <include refid="selectUserVideoVo"/>
        where id = #{id}
    </select>

    <insert id="insertUserVideo" parameterType="UserVideo" useGeneratedKeys="true" keyProperty="id">
        insert into user_video
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="fileName != null">file_name,</if>
            <if test="videoUrl != null">video_url,</if>
            <if test="coverUrl != null">cover_url,</if>
            <if test="status != null">status,</if>
            <if test="uploadTime != null">upload_time,</if>
            <if test="duration != null">duration,</if>
            <if test="analyzeTime != null">analyze_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="fileName != null">#{fileName},</if>
            <if test="videoUrl != null">#{videoUrl},</if>
            <if test="coverUrl != null">#{coverUrl},</if>
            <if test="status != null">#{status},</if>
            <if test="uploadTime != null">#{uploadTime},</if>
            <if test="duration != null">#{duration},</if>
            <if test="analyzeTime != null">#{analyzeTime},</if>
         </trim>
    </insert>

    <update id="updateUserVideo" parameterType="UserVideo">
        update user_video
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="fileName != null">file_name = #{fileName},</if>
            <if test="videoUrl != null">video_url = #{videoUrl},</if>
            <if test="coverUrl != null">cover_url = #{coverUrl},</if>
            <if test="status != null">status = #{status},</if>
            <if test="uploadTime != null">upload_time = #{uploadTime},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="analyzeTime != null">analyze_time = #{analyzeTime},</if>
        </trim>
        where id = #{id} and status!=4
    </update>

    <delete id="deleteUserVideoById" parameterType="Long">
        delete from user_video where id = #{id}
    </delete>

    <delete id="deleteUserVideoByIds" parameterType="String">
        delete from user_video where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

<!--    <select id="selectVideoByUserId" parameterType="Long">-->
<!--        select id,status from user_video where user_id = #{userId} and status = 1-->
<!--    </select>-->
</mapper>